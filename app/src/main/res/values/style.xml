<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textColor">@color/grey4</item>
        <item name="android:backgroundTint">@color/grey2</item>
    </style>
    <style name="TextBox">
        <item name="colorControlActivated">@color/grey2</item>
        <item name="android:backgroundTint">@color/grey2</item>
        <item name="android:textColorHighlight">@color/grey4</item>
        <item name="android:textColorLink">@color/grey3</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/grey4</item>
    </style>
    <style name="TextBody">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextHeading1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextHeading2">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CardStyle" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
    </style>
</resources>