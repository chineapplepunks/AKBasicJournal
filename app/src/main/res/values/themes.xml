<resources>
    <!-- Base application theme. -->
    <style name="Theme.Diary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey1</item>
        <item name="colorPrimaryVariant">@color/grey2</item>
        <item name="colorOnPrimary">@color/grey5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey4</item>
        <item name="colorSecondaryVariant">@color/grey5</item>
        <item name="colorOnSecondary">@color/grey1</item>
        <item name="colorAccent">@color/grey3</item>
        <item name="backgroundColor">@color/lightBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/grey3</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/Theme.Diary.PreferenceTheme</item>
    </style>
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/grey3</item>
        <item name="android:colorAccent">@color/grey5</item>
    </style>
    <style name="Theme.Diary.PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/layout_preferences</item>
    </style>

</resources>