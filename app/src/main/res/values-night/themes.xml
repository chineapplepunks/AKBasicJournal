<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey3</item>
        <item name="colorPrimaryVariant">@color/grey4</item>
        <item name="colorOnPrimary">@color/grey1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey1</item>
        <item name="colorSecondaryVariant">@color/grey2</item>
        <item name="colorOnSecondary">@color/grey5</item>
        <item name="colorAccent">@color/grey3</item>
        <item name="backgroundColor">@color/darkBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey3</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/Theme.Diary.PreferenceTheme</item>
    </style>
        <style name="AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
            <item name="android:textColor">@color/white</item>
            <item name="android:textColorPrimary">@color/grey2</item>
            <item name="android:colorAccent">@color/grey3</item>
        </style>
    <style name="Theme.Diary.PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/layout_preferences</item>
    </style>

</resources>